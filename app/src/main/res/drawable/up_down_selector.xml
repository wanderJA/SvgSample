<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:id="@+id/up"
            android:drawable="@drawable/ic_up"
            android:state_checked="true"/>
    <item
            android:id="@+id/down"
            android:drawable="@drawable/ic_down"
            android:state_checked="false"/>

    <transition
            android:drawable="@drawable/up_down_anim"
            android:fromId="@id/up"
            android:toId="@id/down"/>

    <transition
            android:drawable="@drawable/down_up_anim"
            android:fromId="@id/down"
            android:toId="@id/up"/>
</animated-selector>